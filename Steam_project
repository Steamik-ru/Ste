#include <iostream>
#include <factotial>

using namespace std;

int factorial(int n) {
if (n == 0) {
return 1;
} else {
return n * factorial(n - 1);
}
}

int main() {
int number;

cout << "Введите число: ";
cin >> number;

cout << "Факториал " << number << " равен: " << factorial(number) << endl;

return 0;
}
